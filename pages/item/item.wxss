.avatar
{
    z-index: 3;
    position: relative;
    border-radius: 50%;
    height: 230rpx;
    width: 230rpx;
    background-color: white;
    margin: 0 auto;
    background-size: cover;
    background-position: center;
    top: 40rpx;
    box-shadow: 0px 0px 6rpx 2rpx rgba(0,0,0,0.3);
    border: 6rpx solid white;
}

.avatar-text {
  color: #353535;
  padding-top: 60rpx;
  font-size: 30rpx;
